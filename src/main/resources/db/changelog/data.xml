    </changeSet>
    <changeSet id="fill_schedule_change" author="Sasha">
        <preConditions>
            <tableExists tableName="schedule_change"/>
        </preConditions>
        <sql>
            INSERT INTO schedule_change (client_id, date, new_date, planned, type_of_change_id) VALUES
